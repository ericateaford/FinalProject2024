<!-- app/views/surveys/pre_new.html.erb -->
<%= form_with(url: new_survey_path, method: :get, local: true) do |form| %>
  <div class="mb-3 mt-3 text-center">
    <%= form.label :number_of_questions, 'Number of Questions' %>
    <%= form.number_field :number_of_questions, min: 1, required: true, oninvalid: "this.setCustomValidity('Please enter a number greater than 0')", oninput: "this.setCustomValidity('')" %>
  </div>
  

  <div class="actions mr-2 mb-2 text-center">
    <%= form.submit 'Continue', class: 'btn btn-success' %>
    <%= link_to 'Cancel', surveys_path, class: 'btn btn-dark' %>
  </div>
<% end %>