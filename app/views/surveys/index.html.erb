<link rel="stylesheet" href="path/to/bootstrap.css">
<link rel="stylesheet" href="path/to/bootstrap-icons.css">

<p style="color: green"><%= notice %></p>

<h1 class="text-center">Surveys</h1>

<div class="text-center">
  <%= link_to "<i class='bi bi-clipboard2-plus'></i> Create a Survey".html_safe, pre_new_survey_path, class: "btn btn-success mb-2 btn-lg btn-block" %>
</div>

<div id="surveys" class="row mt-3">
  <% @surveys.each_slice(2) do |surveys_batch| %>
    <div class="surveys-container">
      <% surveys_batch.each do |survey| %>
        <div class="col-md-6 mx-auto">
          <div class="card mb-4">
            <div class="card-body" style="background-color:black; border-radius: 5px;">
              <%= render survey %>
              <div class="d-flex justify-content-center mt-2" style="background-color:black;">
                <%= link_to "<i class='bi bi-eye'></i> Take Survey".html_safe, survey, class: "btn btn-success", style: "border-radius: 5px;" %>
                <%= link_to "<i class='bi bi-pencil'></i> Edit".html_safe, edit_survey_path(survey), class: "btn btn-warning", style: "border-radius: 5px; margin-left: 5px;" %>
                <%= button_to "<i class='bi bi-trash'></i> Delete".html_safe, survey, method: :delete, data: {turbo_confirm: "Are you sure you want to delete?" }, class: "btn btn-danger", style: "border-radius: 5px; margin-left: 5px;" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
  