<p style="color: green"><%= notice %></p>

<h1>Options</h1>

<div id="options">
  <% @options.each do |option| %>
  <%= render option %>
  <p>
    <%= link_to "Show this option", question_option_path(@question, option) %>
  </p>
<% end %>
</div>

<%= link_to "New option", new_question_option_path(@question) %>
